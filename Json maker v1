<!DOCTYPE html><html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Bag JSON Creator</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    .hidden { display: none; }
    .bag-section, .item-section { margin-top: 20px; }
    select, input { margin: 5px; }
  </style>
</head>
<body>
  <button id="startBtn">Start</button>  <div id="bagContainer" class="bag-section hidden">
    <h3>Select Bags</h3>
    <div id="bags"></div>
  </div>  <div id="itemContainer" class="item-section hidden">
    <h3>Assign Items to Bags</h3>
    <div id="items"></div>
    <button onclick="generateJSON()">Generate JSON</button>
    <pre id="output"></pre>
  </div>  <script>
    const itemList = ["Laser Pistol", "Rocket Launcher", "Medkit", "Nano Shield"];
    const bagList = ["Large Blue Bag", "Medium Red Bag", "Small Green Bag"];

    document.getElementById('startBtn').addEventListener('click', () => {
      const bagsDiv = document.getElementById('bags');
      bagList.forEach((bag, index) => {
        const div = document.createElement('div');
        div.innerHTML = `
          <strong>${bag}</strong><br>
          Rayguns (max 23): <input type="number" min="1" max="23" value="1" class="rayguns" data-bag="${index}"><br>
        `;
        bagsDiv.appendChild(div);
      });
      document.getElementById('bagContainer').classList.remove('hidden');
      document.getElementById('itemContainer').classList.remove('hidden');

      const itemsDiv = document.getElementById('items');
      bagList.forEach((bag, index) => {
        const div = document.createElement('div');
        div.innerHTML = `
          <h4>${bag}</h4>
          <label for="item-${index}">Choose Item:</label>
          <select id="item-${index}">
            ${itemList.map(item => `<option value="${item}">${item}</option>`).join('')}
          </select>
          Quantity per raygun (1-250): 
          <input type="number" min="1" max="250" value="1" class="quantity" data-bag="${index}"><br>
        `;
        itemsDiv.appendChild(div);
      });
    });

    function generateJSON() {
      const data = [];
      const raygunInputs = document.querySelectorAll('.rayguns');
      const quantityInputs = document.querySelectorAll('.quantity');

      raygunInputs.forEach((rayInput, i) => {
        const r = parseInt(rayInput.value);
        const tasan = parseInt(quantityInputs[i].value);
        const itemSelect = document.getElementById(`item-${i}`);
        const item = itemSelect.value;
        data.push({
          bag: bagList[i],
          raygun: r,
          item: item,
          tasan: tasan
        });
      });

      document.getElementById('output').textContent = JSON.stringify(data, null, 2);
    }
  </script></body>
</html>
